{
    "version": 2,
    "builds": [
      {
        "src": "server/api/**/*.py",
        "use": "@vercel/python"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/api/$1.py"
      },
      {
        "src": "/assets/(.*)",
        "dest": "client/assets/$1"
      },
      {
        "src": "/favicon.ico",
        "dest": "client/favicon.ico"
      },
      {
        "src": "/(.*)",
        "dest": "client/index.html"
      }
    ]
  }